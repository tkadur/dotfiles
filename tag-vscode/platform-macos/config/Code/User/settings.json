{
    // C++ settings
    "cmake.configureOnOpen": true,
    "C_Cpp.updateChannel": "Insiders",
    // General VSCode settings
    "debug.showBreakpointsInOverviewRuler": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "Hack, Menlo, Monaco, 'Courier New', monospace",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "editor.wordWrap": "on",
    "explorer.autoReveal": false,
    "files.trimTrailingWhitespace": true,
    "scm.diffDecorations": "gutter",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.editor.closeEmptyGroups": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.iconTheme": "vscode-icons",
    "workbench.tips.enabled": false,
    // Git settings
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.decorations.enabled": false,
    "git.ignoreLegacyWarning": true,
    // Git Lens settings
    "gitlens.blame.toggleMode": "window",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.heatmap.toggleMode": "window",
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.menus": {
        "editor": {
            "blame": false,
            "clipboard": true,
            "compare": true,
            "details": false,
            "history": false,
            "remote": false
        },
        "editorGroup": {
            "blame": true,
            "compare": true
        },
        "editorTab": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "explorer": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true,
            "stashInline": true
        },
        "scmItem": {
            "clipboard": true,
            "compare": true,
            "history": true,
            "remote": true,
            "stash": true
        }
    },
    "gitlens.recentChanges.toggleMode": "window",
    "gitlens.views.compare.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.search.location": "scm",
    // Go settings
    "go.useLanguageServer": true,
    // Haskell settings
    "languageServerHaskell.hieExecutablePath": "/Users/tkadur/.local/bin/hie",
    // Misc. extension settings
    "code-runner.saveFileBeforeRun": true,
    "liveshare.languages.allowGuestCommandControl": true,
    "vsicons.dontShowNewVersionMessage": true,
    // Python settings
    "python.analysis.openFilesOnly": false,
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    // Reason/OCaml settings
    "reason.codelens.enabled": true,
    // Rust settings
    "rust-analyzer.checkOnSave.command": "clippy",
    "rust-analyzer.debug.openDebugPane": true,
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.procMacro.enable": true,
    // Standard ML settings
    "sml.smlnj.make.debounce": 600000000000000000000,
    // LaTeX settings
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    // Vim settings
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-s>": false,
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "undo",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "<C-r>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "redo",
                    "args": []
                }
            ]
        }
    ],
    "vim.useSystemClipboard": true,
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        }
    ],
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latexindent.path": "true",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "editor.inlineSuggest.enabled": true,
    "editor.fontSize": 13,
    "debug.toolBarLocation": "docked",
    "go.toolsManagement.autoUpdate": true,
}